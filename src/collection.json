{
  "$schema": "../node_modules/@angular-devkit/schematics/collection-schema.json",
  "schematics": {
    "cqrs": {
      "description": "Generates a CQRS module",
      "factory": "./schematics/cqrs/cqrs.factory#main",
      "schema": "./schematics/cqrs/schema.json"
    },
    "command": {
      "description": "Generates a CQRS command",
      "factory": "./schematics/command/command.factory#main",
      "schema": "./schematics/command/schema.json",
      "aliases": ["cmd"]
    },
    "query": {
      "description": "Generates a CQRS query",
      "factory": "./schematics/query/query.factory#main",
      "schema": "./schematics/query/schema.json",
      "aliases": ["qr"]
    }
  }
}
