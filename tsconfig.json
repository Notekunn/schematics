    "module": "commonjs",
    "target": "es2017",
    "sourceMap": false,
    "declaration": false,
    "outDir": "./lib",
    "baseUrl": "./",
    "noLib": false,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "src/**/files/**", "lib/**/files/**"]
}
